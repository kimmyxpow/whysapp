{
    "name": "powsapp",
    "version": "1.0.0",
    "main": "index.js",
    "scripts": {
        "start": "electron .",
        "build": "electron-builder --win --mac --linux",
        "build:win": "electron-builder --win",
        "build:linux": "electron-builder --linux",
        "build:mac": "electron-builder --mac"
    },
    "build": {
        "appId": "kim.pow.powsapp",
        "productName": "PowsApp (WhatsApp Desktop)",
        "icon": "assets/icon",
        "win": {
            "target": [
                "portable"
            ],
            "icon": "assets/icon.ico"
        },
        "mac": {
            "target": [
                "dmg"
            ],
            "icon": "assets/icon.icns"
        },
        "linux": {
            "target": [
                "AppImage"
            ],
            "icon": "assets/icon.png"
        },
        "publish": [
            {
                "provider": "github",
                "owner": "kimmyxpow",
                "repo": "powsapp",
                "releaseType": "release"
            }
        ]
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "description": "WhatsApp Desktop app built with Electron",
    "devDependencies": {
        "dmg-license": "^1.0.11",
        "electron": "^35.1.5",
        "electron-builder": "^26.0.12"
    }
}
